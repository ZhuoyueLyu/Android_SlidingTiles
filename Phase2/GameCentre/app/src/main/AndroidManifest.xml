<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group_0617.csc207.gamecentre">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".viewAndController.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gameSlidingTiles.StartingActivity" />
        <activity android:name=".game2048.StartingActivity2048" />
        <activity android:name=".gameMemory.CardStartingActivity" />
        <activity android:name=".viewAndController.GameChoiceActivity" />
        <activity android:name=".viewAndController.ResultBoardActivity" />
        <activity android:name=".viewAndController.ScoreboardActivity" />
        <activity android:name=".viewAndController.LeaderboardActivity" />
        <activity android:name=".viewAndController.GameRulesActivity" />
        <activity android:name=".game2048.GameActivity2048" />
        <activity android:name=".gameSlidingTiles.GameActivity" />
        <activity android:name=".gameMemory.CardGameActivity" />
        <uses-library android:name="com.google.android.maps" />
    </application>
</manifest>